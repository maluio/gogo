{% extends 'base.html.twig' %}

    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('build/css/learn.css') }}">
    {% endblock %}

{% block body %}
    <div id="learn-jsx">

    </div>

    <script type="text/javascript">
        let  GoGo = {
            'basicAuthValue': '{{ basicAuthValue }}'
        };
    </script>

{% endblock %}

{% block javascripts %}
    {#
     I don't want those insane file sizes from webpack during devlopment, hence I load react via an cdn.

     And I don't want the JS from the other parts of the app here, hence no parent().
    #}
    {% if app.environment == 'prod' %}
        <script crossorigin src="https://unpkg.com/react@16/umd/react.production.min.js"></script>
        <script crossorigin src="https://unpkg.com/react-dom@16/umd/react-dom.production.min.js"></script>
    {% else %}
        <script crossorigin src="https://unpkg.com/react@16/umd/react.development.js"></script>
        <script crossorigin src="https://unpkg.com/react-dom@16/umd/react-dom.development.js"></script>
    {% endif %}

    <script src="{{ asset('build/js/learn.js') }}"></script>
{% endblock %}